{
  "name": "flagpole-explorer",
  "displayName": "Flagpole Explorer",
  "description": "Visualize feature flags defined in flagpole.yaml",
  "version": "0.0.0",
  "icon": "./dist/static/flag-128.png",
  "repository": {
    "type": "git",
    "url": "https://github.com/getsentry/vscode-flagpole-explorer.git"
  },
  "publisher": "getsentry",
  "license": "SEE LICENSE IN LICENSE",
  "private": true,
  "engines": {
    "vscode": "^1.99.0"
  },
  "categories": [
    "Other"
  ],
  "keywords": [
    "sentry",
    "flagpole",
    "feature flag"
  ],
  "pricing": "Free",
  "activationEvents": [
    "workspaceContains:**/flagpole.yaml"
  ],
  "main": "./dist/extension.js",
  "browser": "./dist/extension.js",
  "contributes": {
    "configurationDefaults": {
      "files.associations": {
        "flagpole.yaml": "yaml"
      },
      "yaml.maxItemsComputed": 10000
    },
    "configuration": {
      "title": "Flagpole Explorer",
      "type": "object",
      "properties": {
        "flagpole-explorer.renderRolloutHints": {
          "type": "boolean",
          "description": "Show Rollout inline hints",
          "default": true
        },
        "flagpole-explorer.renderMutationLenses": {
          "type": "string",
          "enum": [
            "always",
            "for selection",
            "never"
          ],
          "description": "Show Add/Insert inline actions",
          "default": "always"
        },
        "flagpole-explorer.renderEvalLens": {
          "type": "boolean",
          "description": "Show Evaluate inline action",
          "default": false
        },
        "flagpole-explorer.eval.sentry-workspace": {
          "type": "string",
          "description": "The location of the getsentry/sentry workspace",
          "default": "$HOME/code/sentry"
        },
        "flagpole-explorer.eval.bin": {
          "type": "string",
          "description": "The relative path of the evaluation binary",
          "default": "./bin/flagpole"
        },
        "flagpole-explorer.eval.flagpole-file": {
          "type": "string",
          "description": "Location of the flagpole.yaml flag definition file",
          "default": "$HOME/code/sentry-options-automator/options/default/flagpole.yaml"
        }
      }
    },
    "commands": [
      {
        "category": "Flagpole",
        "command": "flagpole-explorer.addFeature",
        "title": "Add Feature",
        "when": "resourceFilename == flagpole.yaml"
      },
      {
        "category": "Flagpole",
        "command": "flagpole-explorer.addSegment",
        "title": "Add Segment",
        "when": "resourceFilename == flagpole.yaml"
      },
      {
        "category": "Flagpole",
        "command": "flagpole-explorer.addCondition",
        "title": "Add Condition",
        "when": "resourceFilename == flagpole.yaml"
      },
      {
        "category": "Flagpole",
        "command": "flagpole-explorer.show-evaluate-view",
        "title": "Evaluate Flag"
      }
    ],
    "viewsContainers": {
      "activitybar": [
        {
          "id": "sentryFlagpoleViewContainer",
          "title": "Flagpole",
          "icon": "./dist/static/flag.svg"
        }
      ]
    },
    "views": {
      "sentryFlagpoleViewContainer": [
        {
          "id": "sentryFlagpoleFlagsByName",
          "name": "By Name",
          "icon": "./dist/static/flag.svg",
          "visibility": "visible"
        },
        {
          "id": "sentryFlagpoleFlagsByOwner",
          "name": "By Owner",
          "icon": "./dist/static/flag.svg",
          "visibility": "visible"
        },
        {
          "id": "sentryFlagpoleFlagsByRollout",
          "name": "By Rollout",
          "icon": "./dist/static/flag.svg",
          "visibility": "collapsed"
        },
        {
          "id": "sentryFlagpoleFlagsByEnabled",
          "name": "By Enabled",
          "icon": "./dist/static/flag.svg",
          "visibility": "collapsed"
        },
        {
          "id": "sentryFlagpoleFlagsByCreatedAt",
          "name": "By Created At",
          "icon": "./dist/static/flag.svg",
          "visibility": "collapsed"
        },
        {
          "id": "sentryFlagpoleFlagsWithExtraSegments",
          "name": "With problems",
          "icon": "./dist/static/flag.svg",
          "visibility": "visible"
        }
      ]
    },
    "menus": {
      "editor/context": [],
      "view/item/context": []
    },
    "viewsWelcome": [
      {
        "view": "sentryFlagpoleFlagsByEnabled",
        "contents": "No `flagpole.yaml` found. Are you in the right repo or workspace?\n[Open `flagpole.yaml` In Github $(link-external)](https://github.com/getsentry/sentry-options-automator/blob/main/options/default/flagpole.yaml)"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "npm run check-types && node esbuild.js",
    "watch": "npm-run-all -p watch:*",
    "watch:esbuild": "node esbuild.js --watch",
    "watch:tsc": "tsc --noEmit --watch --project tsconfig.json",
    "package": "npm run check-types && node esbuild.js --production",
    "check-types": "tsc --noEmit",
    "lint": "eslint src",
    "pretest": "npm run compile",
    "test": "vscode-test-web --browserType=chromium --extensionDevelopmentPath=. --extensionTestsPath=dist/web/test/suite/extensionTests.js",
    "run-in-browser": "vscode-test-web --browserType=chromium --extensionDevelopmentPath=. ."
  },
  "dependencies": {},
  "devDependencies": {
    "@esbuild-plugins/node-globals-polyfill": "^0.2.3",
    "@types/mocha": "^10.0.10",
    "@types/node": "20.x",
    "@types/vscode": "1.99.0",
    "@types/vscode-webview": "^1.57.5",
    "@typescript-eslint/eslint-plugin": "^8.31.1",
    "@typescript-eslint/parser": "^8.31.1",
    "@vscode/test-cli": "^0.0.11",
    "@vscode/test-electron": "^2.5.2",
    "assert": "^2.1.0",
    "esbuild": "^0.25.3",
    "esbuild-copy-static-files": "^0.1.0",
    "eslint": "^9.25.1",
    "npm-run-all": "^4.1.5",
    "typescript": "^5.8.3"
  }
}
